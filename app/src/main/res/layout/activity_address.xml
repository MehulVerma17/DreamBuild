<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Address">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="438dp"
        android:layout_height="758dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background7" />

    <RelativeLayout
        android:layout_width="365dp"
        android:layout_height="652dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/custom_relative_layout"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="296dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="38dp"
            android:layout_marginTop="29dp"
            android:text="Write Details to where you want us to Deliver."
            android:textColor="#000000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputName"
            android:layout_width="293dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="38dp"
            android:layout_marginTop="93dp"
            android:background="@drawable/custom_input_field"
            android:ems="10"
            android:hint="Full Name*"
            android:inputType="textPersonName"
            android:textColorHint="#CBB869" />

        <EditText
            android:id="@+id/inputNumber"
            android:layout_width="293dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="171dp"
            android:background="@drawable/custom_input_field"
            android:ems="10"
            android:hint="Phone Number*"
            android:inputType="number"
            android:maxLength="10"
            android:textColorHint="#CBB869" />

        <EditText
            android:id="@+id/inputAddress"
            android:layout_width="291dp"
            android:layout_height="102dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="255dp"
            android:background="@drawable/custom_input_field"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Street Address/House No.*"
            android:inputType="textMultiLine"
            android:textColorHint="#CBB869" />

        <EditText
            android:id="@+id/inputZipcode"
            android:layout_width="137dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="226dp"
            android:background="@drawable/custom_input_field"
            android:ems="10"
            android:hint="Zip Code*"
            android:inputType="number"
            android:maxLength="6"
            android:textColorHint="#CBB869" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="127dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="379dp"
            android:background="@drawable/custom_spinner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buyNow"
            android:layout_width="154dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="102dp"
            android:layout_marginBottom="103dp"
            android:backgroundTint="#CBB869"
            android:text="Buy Now" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>